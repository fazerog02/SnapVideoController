{
    "name": "Snap Video Controller",
    "description": "指パッチンで動画を再生・停止",
    "version": "1.0.0",
    "manifest_version": 2,
    "icons": {
        "16": "icons/16.png",
        "128": "icons/128.png"
    },
    "content_scripts": [{
        "matches": [
            "*://*/*"
        ],
        "js": [
            "js/tf.min.js",
            "js/speech-commands.min.js",
            "js/init.js",
            "js/start-recognizing.js",
            "js/stop-recognizing.js"
        ]
    }],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "permissions": [
        "background",
        "tabs",
        "*://*/*"
    ]
}